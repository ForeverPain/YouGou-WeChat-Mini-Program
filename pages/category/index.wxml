<view calss="cates">
    <SearchInput></SearchInput>
    <view class="cates_container">
        <!-- 左侧菜单 -->
        <scroll-view scroll-y class="left_menu">
            <view class="menu_item" wx:for="{{commodityClassify}}" wx:key='*this'>{{item}}</view>
        </scroll-view>
        <!-- 右侧内容 -->
        <scroll-view scroll-y class='right_content'>
            <view class="goods_group" wx:for="{{commodityDetails}}" wx:for-index="index1" wx:for-item="item1">
                <view class="goods_title">{{item1.cat_name}}</view>
            </view>
        </scroll-view>
    </view>
</view>